USE Module1_Practice;

SELECT NAME FROM Pets;


SELECT Pets.NAME,Clients.FIRST_NAME FROM Pets,Clients
WHERE CLIENT_ID = Clients.ID;

SELECT Pets.NAME,Clients.FIRST_NAME FROM Pets
JOIN Clients ON CLIENT_ID = Clients.ID;


SELECT Pets.NAME,Clients.FIRST_NAME,PetTypes.NAME FROM Pets,Clients,PetTypes
WHERE CLIENT_ID = Clients.ID AND PET_TYPE_ID = PetTypes.ID;

SELECT Pets.NAME,Clients.FIRST_NAME,PetTypes.NAME FROM Pets
INNER JOIN Clients ON CLIENT_ID = Clients.ID
INNER JOIN PetTypes ON PET_TYPE_ID = PetTypes.ID;


SELECT ID,FIRST_NAME,LAST_NAME FROM Clients WHERE ID NOT IN (SELECT PET_TYPE_ID FROM Pets);

SELECT NAME FROM PetTypes WHERE ID IN (SELECT PET_TYPE_ID FROM Pets);