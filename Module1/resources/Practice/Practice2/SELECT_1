# Вибірка даних – 1

SELECT FIRST_NAME,LAST_NAME FROM Developer;

SELECT FIRST_NAME,LAST_NAME FROM Developer WHERE SPECIALTY = 'Java';

SELECT FIRST_NAME,LAST_NAME FROM Developer WHERE SALARY > 1000;

SELECT FIRST_NAME,LAST_NAME FROM Developer WHERE NAME LIKE ;

SELECT FIRST_NAME,LAST_NAME FROM Developer WHERE NAME LIKE ;

# Вибірка даних - сортування

SELECT FIRST_NAME,LAST_NAME FROM Developer ORDER BY FIRST_NAME ASC;
SELECT FIRST_NAME,LAST_NAME FROM Developer ORDER BY FIRST_NAME DESC;
SELECT FIRST_NAME,LAST_NAME FROM Developer ORDER BY length(FIRST_NAME);

SELECT FIRST_NAME,LAST_NAME,SPECIALTY FROM Developer
ORDER BY FIRST_NAME,
    CASE SPECIALTY
    WHEN 'Java' THEN 1
    WHEN 'C#' THEN 2
    WHEN 'UI/UX' THEN 3
    END
