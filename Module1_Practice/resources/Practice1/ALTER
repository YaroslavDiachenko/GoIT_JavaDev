USE Module1_Practice;

ALTER TABLE Clients ADD CONSTRAINT PRIMARY KEY (ID);
ALTER TABLE Pets ADD CONSTRAINT PRIMARY KEY (ID);
ALTER TABLE PetTypes ADD CONSTRAINT PRIMARY KEY (ID);

ALTER TABLE Clients MODIFY ID INT AUTO_INCREMENT;
ALTER TABLE Pets MODIFY ID INT AUTO_INCREMENT;
ALTER TABLE PetTypes MODIFY ID INT AUTO_INCREMENT;

ALTER TABLE Clients MODIFY FIRST_NAME VARCHAR(50) NOT NULL;
ALTER TABLE Clients MODIFY LAST_NAME VARCHAR(50) NOT NULL;
ALTER TABLE PetTypes MODIFY NAME VARCHAR(50) NOT NULL;
ALTER TABLE Pets MODIFY NAME VARCHAR(50) NOT NULL;

ALTER TABLE Pets ADD CONSTRAINT FK_PET_TYPE_ID FOREIGN KEY (PET_TYPE_ID) REFERENCES PetTypes (ID);
ALTER TABLE Pets ADD CONSTRAINT FK_CLIENT_ID FOREIGN KEY (CLIENT_ID) REFERENCES Clients (ID);